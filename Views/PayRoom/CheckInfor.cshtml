@model WebQL.Areas.Admin.Models.RentInfo
@{
    ViewBag.Title = "CheckInfor";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
    //var listRoom = ViewBag.listRoom as List<WebQL.Areas.Admin.Models.Room>;
}
@{
    String datein = TempData["datein"].ToString();
    String dateout = TempData["dateout"].ToString();
    int giatien = (int)(int.Parse(TempData["giatien"].ToString()) * 20 / 100);
    }

}
<section class="container tm-home-section-1" id="more1">
    
    <div class="container">

        <div class="row">
            <div class="page-header text-center">
                <h2><b>Xác nhận thông tin</b></h2>
            </div>
            <div class="col-md-8 col-md-offset-2">
                @using (Html.BeginForm("Confirm", "PayRoom", FormMethod.Post))
                {

                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.dateRent)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.dateRent, new { @class = "form-control", Value = datein, @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.dateRent)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.datePay)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.datePay, new { @class = "form-control", Value = @dateout, @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.datePay)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.deposit)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.deposit, new { @class = "form-control", @readonly = "readonly", @Value = giatien })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.nameClient)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.nameClient, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.nameClient)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.gender)
                            </div>
                            <div class="editor-field">
                                @Html.CheckBoxFor(model => model.gender)
                                @Html.ValidationMessageFor(model => model.gender)
                            </div>
                        </div>
                        <div class="form-group">
                            @*<div class="editor-label">
                                @Html.LabelFor(model => model.birth, new { @type ="hidden"} )
                            </div>*@
                            <div class="editor-field">
                                <div class="input-group date">
                                    @Html.TextBoxFor(model => model.birth, new { @class = "form-control birth", @type="hidden"  })
                                </div>
                                </div>
                            </div>
                        <div class="form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.idCard)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.idCard, new { type = "number", @class = "form-control phonenumber", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.idCard)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.phone)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.phone, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.phone)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.email)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.email)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.description)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.description, new { @class = "form-control" })
                            </div>
                        </div>

                        <p>
                            <input type="submit" class="btn-success" value="Create" />
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<script>
    //$('.brith').attr('max', new Date());
    $('#phone').attr('minlength', '10');
    $('#phone').attr('maxlength', '11');
    $('#phone').keypress(function (event) {
        return event.charCode >= 47 && event.charCode <= 58;
    });
</script>
