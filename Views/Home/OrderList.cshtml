@model List<WebApplication1.Models.OrderListModel>
@{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";

    <style>
        footer {
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    </style>
}
    <section class="container" style="padding-top:100px;">
            <section class="well">
                <section>
                    <div class="row">
                        <div class="col-md-12 margin-bottom-15">
                            <header class="text-center">
                                <h2>Thông tin đặt phòng</h2>
                            </header>
                        </div>
                        <div class="col-md-12">
                            <form role="search" method="post" action="/phong-da-dat">

                                <div class="col-md-offset-3 col-md-6">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Nhập chứng minh thư" name="idCard">
                                        <div class="input-group-btn">
                                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>

                    </div>
                    <hr />
                </section>
              


                <section>
                    <table class="table table-responsive table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Số phòng đã đặt</th>
                                <th>Tiền cọc</th>
                                <th>Ngày đặt</th>
                                <th>Ngày đến</th>
                                <th>Ngày đi</th>
                                <th>Trạng thái</th>
                                <th width="5%"></th>
                            </tr>

                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                for (int i = 1; i <= Model.Count; i++)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@Model[i - 1].SoPhongDaDat</td>
                                        <td>@Model[i - 1].TienCoc</td>
                                        <td>@Model[i - 1].NgayDat</td>
                                        <td>@Model[i - 1].NgayDen</td>
                                        <td>@Model[i - 1].NgayDi</td>
                                        <td>@Model[i - 1].TrangThaiPhieuDat</td>
                                        <td>
                                            <a class="btn btn-default" href="/chi-tiet-phieu-dat/@Model[i-1].MAPhieuDat">Chi tiết</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>

                    </table>
                </section>
            </section>
    </section>
 